        <form class="col s12 z-depth-5 student-form">
              <div class="formHeader">Student Details</div>
              {{!-- play with HR for line --}}
              <hr>
              <div class="row">
                <div class="input-field col s6">
                  <input type="hidden" id="studId" name="studId">
                  <input placeholder="First Name" id="first_name" type="text" class="validate" disabled>
                  <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s6">
                  <input placeholder="last Name" id="last_name" type="text" class="validate" disabled >
                  <label for="last_name">Last Name</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <select id="gender">
                    <option value="" disabled selected>Choose Students Gender</option>
                    <option value="boy" disabled>Boy</option>
                    <option value="girl" disabled>Girl</option>
                    <option value="other" disabled>Other</option>
                  </select>
                  <label>Select Gender</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <select id="grade">
                    <option value="" disabled selected>Choose Student Grade</option>
                    <option value="6" disabled>Grade 6</option>
                    <option value="7" disabled>Grade 7</option>
                    <option value="8" disabled>Grade 8</option>
                  </select>
                  <label>Select Grade</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="textarea_allergies" class="materialize-textarea" readonly></textarea>
                  <label for="textarea_allergies">Allergies</label>
                </div>
              </div>
        </form>